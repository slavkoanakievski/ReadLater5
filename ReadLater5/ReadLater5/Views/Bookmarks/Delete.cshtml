@model Entity.Bookmark

@{
    ViewBag.Title = "Delete Bookmark";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="mt-3">
                    @Html.ActionLink("← Back to List", "Index", null, new { @class = "btn btn-outline-primary d-flex align-items-center" })
                </div>
                <h2 class="card-title">Delete Bookmark</h2>
                <p class="text-muted">Are you sure you want to delete this bookmark?</p>

                <dl class="row mb-4">
                    <dt class="col-sm-3">URL</dt>
                    <dd class="col-sm-9">
                        <a href="@Model.URL" target="_blank" class="text-info">@Model.URL</a>
                    </dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.ShortDescription)
                    </dd>

                    <dt class="col-sm-3">Category</dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Category.Name)
                    </dd>

                    <dt class="col-sm-3">Created On</dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.CreateDate)
                    </dd>
                </dl>

                @using (Html.BeginForm("Delete", "Bookmarks", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="d-flex justify-content-between">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
}